{
  "exclude": ["dist"],
  "compilerOptions": {
    // Default
    "target": "es5",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,

    // Added
    "jsx": "react",
    "module": "ESNext",
    "sourceMap": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "emitDeclarationOnly": true,
    "plugins": [{ "name": "typescript-plugin-css-modules" }],
    "outDir": "dist",
    "declaration": true,
    "declarationDir": "types"
  }
}
